<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Add New Prodotti"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Prodotti Nome"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Prodotti nome here!"
            android:inputType="text"
            android:textColor="@color/black"
            android:id="@+id/productName"
            android:layout_marginTop="8dp"
            android:textColorHint="#808080"
            android:textSize="14sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Expiry Date"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select expiry date"
            android:textColor="@color/black"
            android:id="@+id/expiryDate"
            android:layout_marginTop="8dp"
            android:textColorHint="#808080"
            android:textSize="14sp" />

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/mail_pass_layout"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/shapable_recatngle"
            android:elevation="10dp"
            android:text="Add Prodotti"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>